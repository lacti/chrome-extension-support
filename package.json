{
  "name": "chrome-extension-support",
  "version": "1.0.0",
  "description": "Basic support library for Chrome extension",
  "keywords": [
    "chrome",
    "extension"
  ],
  "author": "jaeyoung.choi <lactrious@gmail.com>",
  "homepage": "https://github.com/lacti/chrome-extension-support",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:lacti/chrome-extension-support.git",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prebuild": "rm -rf lib",
    "build": "tsc",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.117",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "nanoid": "^3.1.10",
    "serialize-error": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
